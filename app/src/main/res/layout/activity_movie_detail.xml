<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/colorBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".Activity.MovieDetailActivity" >

        <ImageView
            android:id="@+id/imgMovie"
            android:layout_width="180dp"
            android:layout_height="270dp"
            android:contentDescription="@string/judul_film"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_JudulDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/judul_film"
        android:textColor="@color/colorTitle"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgMovie"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/lblTglRilis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/release"
        android:textColor="@color/colorTextDark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_JudulDetail"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tv_TglRilisDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblTglRilis"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        tools:text="@string/release" />

        <TextView
            android:id="@+id/lblDurasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/durasi"
            android:textColor="@color/colorTextDark"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_TglRilisDetail"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_DurasiDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lblDurasi"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            tools:text="@string/durasi" />

    <TextView
        android:id="@+id/lblOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ringkasan"
        android:textColor="@color/colorTextDark"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_DurasiDetail"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tv_Overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblOverview"
        android:layout_marginTop="6dp"
        android:layout_marginStart="10dp"
        tools:text="@string/ringkasan" />

</android.support.constraint.ConstraintLayout>